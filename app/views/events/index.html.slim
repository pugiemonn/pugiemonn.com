.ui.segment
  p#notice
    = notice
  h1
    | Listing Events

  .ui.divided.selection.list
    - @events.each do |event|
      .item
        = link_to '削除', event, method: :delete, data: { confirm: '削除してもよろしいですか？' }, class: "right floated compact ui blue button"
        = link_to 'Edit', edit_event_path(event), class: "right floated compact ui blue button"
        .content
          = link_to event.title, event, class: "header"
  br
  = link_to 'New Event', new_event_path
